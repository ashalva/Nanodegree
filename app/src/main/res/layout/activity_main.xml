<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.buka.nanodegreeportfolio.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:text="@string/my_nanodegree_apps" />
    <Button
        android:id="@+id/popular_movies_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/popular_movies"
        android:onClick="sendMessage" />
    <Button
        android:id="@+id/stock_hawk_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/stock_hawk"
        android:onClick="sendMessage" />
    <Button
        android:id="@+id/build_bigger_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/build_it_bigger"
        android:onClick="sendMessage" />
    <Button
        android:id="@+id/make_material_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/make_material"
        android:onClick="sendMessage" />
    <Button
        android:id="@+id/go_ubiquitous_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/go_ubiquitous"
        android:onClick="sendMessage" />
    <Button
        android:id="@+id/capstone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/capstone"
        android:onClick="sendMessage" />
</LinearLayout>

